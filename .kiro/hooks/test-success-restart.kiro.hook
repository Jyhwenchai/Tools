{
  "enabled": true,
  "name": "Test Success Session Restart",
  "description": "Monitors test files and build outputs to detect when all tests pass and compilation succeeds, then automatically starts a new session to continue with the next task",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "Tools/ToolsTests/*.swift",
      "Tools/Tools.xcodeproj/project.pbxproj",
      "buildServer.json"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "All tests have passed and compilation was successful. Please start a new session and continue with the next task. Review the current project state and identify the next development priority or feature to implement."
  }
}